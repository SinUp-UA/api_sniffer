{
  "name": "Universal API Sniffer",
  "description": "Перехват fetch/XHR/WebSocket/SSE на любых сайтах и экспорт логов.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "API Sniffer"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sniffer.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
